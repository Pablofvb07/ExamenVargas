<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:EJEMPLOPROYECTO.ViewModels"
             x:Class="ExamenVargas.Views.ProyectosListView"
             Title="Lista de Proyectos">

    <CollectionView ItemsSource="{Binding Proyectos}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame BorderColor="LightGray" Padding="10" Margin="10" CornerRadius="10">
                    <StackLayout>
                        <Label Text="{Binding NombreProyecto}" FontAttributes="Bold" FontSize="Medium" />
                        <Label Text="{Binding Responsable, StringFormat='Responsable: {0}'}" />
                        <Label Text="{Binding Progreso, StringFormat='Progreso: {0}%'}" />
                        <Label Text="{Binding DuracionDias, StringFormat='Duración: {0} días'}" />
                    </StackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>